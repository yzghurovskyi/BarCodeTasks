@page
@model BarCodeLab.Pages.Shoes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Shoes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label asp-for="UploadedFile"></label>
        </dt>
        <dd>
            <input asp-for="UploadedFile" type="file">
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Search by barcode" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shoes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoes[0].DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoes[0].Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoes[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Season)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    

</table>
